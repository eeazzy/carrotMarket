<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E3269">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/nowChatUserName"
            android:layout_marginLeft="175dp"
            android:textSize="15dp"
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.widget.Button
            android:id="@+id/exitChatBtn"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/send_btn_frame"
            android:elevation="130dp"
            android:fontFamily="@font/yyoulight"
            android:layout_marginLeft="180dp"
            android:text="X" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />

    <LinearLayout
        android:id="@+id/chatLinear"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:background="@color/white"
        >


        <EditText
            android:id="@+id/chatSendingText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             />

        <android.widget.Button
            android:id="@+id/chatButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yyoulight"
            android:textSize="20dp"
            android:elevation="130dp"
            android:background="@drawable/send_btn_frame"
            android:layout_margin="5dp"
            android:text="전송" />


    </LinearLayout>
</LinearLayout>