<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editProductFragment"

    tools:context="com.example.carrotmarket.fragments.editProductFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editDetails"
            android:layout_width="380dp"
            android:layout_height="350dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="100dp"
            android:gravity="top|start"
            android:hint="상품내용을 입력해주세요."
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPrice" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="352dp"
            android:layout_height="57dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:hint="가격 입력"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/editDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTitle" />

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="2dp"
            android:hint="상품이름(제목)"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/editPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.393"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/sellState"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginBottom="120dp"
            android:layout_weight="1"
            android:text="판매상태"
            app:layout_constraintBottom_toTopOf="@+id/editTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333" />

        <Button
            android:id="@+id/editItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightblue"
            android:text="상품 수정"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editDeleteItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editDetails"
            app:layout_constraintVertical_bias="0.839" />

        <Button
            android:id="@+id/editDeleteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="33dp"
            android:backgroundTint="@color/lightblue"
            android:text="등록취소"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editBackHomeBtn"
            app:layout_constraintStart_toEndOf="@+id/editItem"
            app:layout_constraintTop_toBottomOf="@+id/editDetails"
            app:layout_constraintVertical_bias="0.839" />

        <Button
            android:id="@+id/editBackHomeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/lightblue"
            android:text="뒤로가기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toEndOf="@+id/editDeleteItem"
            app:layout_constraintTop_toBottomOf="@+id/editDetails"
            app:layout_constraintVertical_bias="0.839" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="원"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/editDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.731"
            app:layout_constraintStart_toEndOf="@+id/editPrice"
            app:layout_constraintTop_toBottomOf="@+id/editTitle"
            app:layout_constraintVertical_bias="0.49" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
